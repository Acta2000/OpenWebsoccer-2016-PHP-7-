<module version="OpenWebsoccer">
	<admin>
		<adminpage
			id="league"
			entity="league"
			navcategory="league"
			permissionrole="r_daten" >
			<entity dbtable="liga" >
				<overview
					delete="true"
					edit="true" >
					<column
						id="entity_league_name"
						field="name"
						type="text"
						sort="true"
						filter="true" />
					<column
						id="entity_league_kurz"
						field="kurz"
						type="text"
						sort="true"
						filter="true" />
					<column
						id="entity_league_land"
						field="land"
						type="text"
						sort="true"
						filter="true" />
				</overview>
				<editform>
					<field
						id="name"
						type="text"
						required="true"  />
					<field
						id="kurz"
						type="text"
						required="true"  />
					<field
						id="land"
						type="text"
						required="true"  />
					<field
						id="p_steh"
						type="percent"
						required="true"  />
					<field
						id="p_sitz"
						type="percent"
						required="true"  />
					<field
						id="p_haupt_steh"
						type="percent"
						required="true"  />
					<field
						id="p_haupt_sitz"
						type="percent"
						required="true"  />
					<field
						id="p_vip"
						type="percent"
						required="true"  />
					<field
						id="preis_steh"
						type="number"
						required="true"  />
					<field
						id="preis_sitz"
						type="number"
						required="true"  />
					<field
						id="preis_vip"
						type="number"
						required="true"  />
				</editform>
			</entity>
		</adminpage>
	</admin>
	<blocks>
		<block
			id="leaguetable"
			template="league_table"
			model="LeagueTableModel"
			includepages="leagues,league"
			area="content_bottom"
			weight="2"
			role="user,guest" />
	</blocks>
</module>
