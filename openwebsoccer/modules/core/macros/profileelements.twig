{% macro infofield(label, value, doNotEscape = false) %}

	{% block stylesheets %}
		<style type="text/css">
			.inforow {
				margin-top: 10px;
			}
			.infolabel {
				background-image:url({{env.getConfig("bild_infolabel")}});
				background-repeat:no-repeat;
				background-color:{{env.getConfig("color_infolabel")}};;
				color:#ffffff;
				padding-top: 4px;
				padding-left: 5px;
				border: 1px solid darkblue;
			}
			.infovalue {
				padding: 8px;
			}
		</style>
	{% endblock %}

	<div class="row-fluid inforow">
		<div class="span6 infolabel">{% if doNotEscape %}{{ label|raw }}{% else %}{{ label }}{% endif %}</div>
		<div class="span6 infovalue">{% if doNotEscape %}{{ value|raw }}{% else %}{{ value }}{% endif %}</div>
	</div>

{% endmacro %}
