<module version="OpenWebsoccer">
	<settings>
		<setting id="frontend_si_code_sidebar" category="frontend" type="textarea"/>
		<setting id="frontend_si_code_top" category="frontend" type="textarea"/>
		<setting id="frontend_si_code_bottom" category="frontend" type="textarea"/>
		<setting id="frontend_sif_code_sidebar" category="frontend" type="textarea"/>
		<setting id="frontend_sif_code_top" category="frontend" type="textarea"/>
		<setting id="frontend_sif_code_bottom" category="frontend" type="textarea"/>
	</settings>
	<blocks>
		<block
			id="ads_sidebar"
			template="ads_sidebar"
			model="AdsModel"
			includepages="all"
			area="sidebar"
			weight="10"
			role="user"/>
		<block
			id="ads_top"
			template="ads_top"
			model="AdsModel"
			includepages="all"
			area="content_top"
			weight="-10"
			role="user"/>
		<block
			id="ads_bottom"
			template="ads_bottom"
			model="AdsModel"
			includepages="all"
			area="content_bottom"
			weight="10"
			role="user"/>
		<block
			id="si_sidebar"
			template="si_sidebar"
			model="SiModel"
			includepages="all"
			area="sidebar"
			weight="10"
			role="user,guest"/>
		<block
			id="si_top"
			template="si_top"
			model="SiModel"
			includepages="all"
			area="content_top"
			weight="-10"
			role="user,guest"/>
		<block
			id="si_bottom"
			template="si_bottom"
			model="SiModel"
			includepages="all"
			area="content_bottom"
			weight="10"
			role="user,guest"/>
		<block
			id="sif_sidebar"
			template="sif_sidebar"
			model="SifModel"
			includepages="all"
			area="sidebar"
			weight="10"
			role="user,guest"/>
		<block
			id="sif_top"
			template="sif_top"
			model="SifModel"
			includepages="all"
			area="content_top"
			weight="-10"
			role="user,guest"/>
		<block
			id="sif_bottom"
			template="sif_bottom"
			model="SifModel"
			includepages="all"
			area="content_bottom"
			weight="10"
			role="user,guest"/>
	</blocks>
</module>
